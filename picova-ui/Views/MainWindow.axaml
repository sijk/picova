<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PicovaUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PicovaUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="PicoVA">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="10" >
            <StackPanel Orientation="Horizontal" Spacing="10">
                <ComboBox Items="{Binding SerialPorts}" SelectedItem="{Binding SelectedPort}"/>
                <Button Content="{Binding RunLabel}" Command="{Binding Run}"/>
            </StackPanel>
        </Border>

        <ContentControl Content="{Binding MeasurementPlot}" Padding="10"/>
    </DockPanel>

</Window>
